<h1>Departamentos</h1>

<%= render 'form' %>
<table class="dptos_list">
	<tbody>
		<% @dptos.each do |dpto| %>
		  <tr class="fields" id="dpto_item_<%= dpto.id %>">
		    <td><%= dpto.abbr %> - <%= dpto.name %></td>
		    <td class="actions">
		      <%= link_to '+ Subdpto', new_dpto_subdpto_path(dpto)%>
		      <%= link_to 'Editar', edit_dpto_path(dpto), :remote => true %>
		      <%= link_to 'Remover', dpto, method: :delete, data: { confirm: 'Tem certeza?' }, :remote => true %>
		    </td>
		  </tr>
		<% end %>
	</tbody>
</table>