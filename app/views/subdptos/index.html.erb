<h1>Listing subdptos</h1>
<%= render 'form' %>

<div class="subdptos_list">
  <% @subdptos.each do |subdpto| %>
    <div class="subdpto_item_<%= subdpto.id %>">
      <p><%= subdpto.name %></p>
      <div class="actions">
        <%= link_to 'Editar', edit_dpto_subdpto_path(:dpto, subdpto), :remote => true %>
        <%= link_to 'Remover', subdpto, method: :delete, data: { confirm: 'Tem certeza?' }, :remote => true %>
      </div>
    </div>
  <% end %>
</div>